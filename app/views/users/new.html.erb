<h2>Sign up for Academy Air!</h2>

<% if @user.errors.present? %>
	<span class='notice'>You've made a huge mistake.</span>
	<% @user.errors.full_messages.each do |message| %>
		<li class='notice'><%= message %>.</li>
	<% end %>
	<br/>
<% end %>

<%= form_for @user do |f| %>
	<%= f.label :first, 'First Name' %>
	<%= f.text_field :first %>
	<%= f.label :last, 'Last Name' %>
	<%= f.text_field :last %>
	<%= f.label :email, 'E-mail' %>
	<%= f.text_field :email %>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<%= f.label :password_confirmation, 'Confirm Password' %>
	<%= f.password_field :password_confirmation %>
	<%= f.submit 'Join Academy Air', class: 'button' %>
<% end %>